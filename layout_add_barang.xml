<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="24dp"
        android:elevation="12dp"
        android:background="@color/material_dynamic_primary70"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="18sp"
            android:id="@+id/cancelTextView"
            android:textColor="@color/design_default_color_on_primary"
            android:text="Cancel"/>

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOnSecondary"
            android:textSize="24sp"
            android:layout_weight="3"
            android:text="Add New Item"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOnSecondary"
            android:layout_gravity="center|right"
            android:layout_weight="1"
            android:id="@+id/addTextView"
            android:textSize="18sp"
            android:gravity="center|right"
            android:text="Add"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="12dp"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/pictureImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/item_example" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/fabAddPicture"
            android:src="@drawable/camera"
            app:rippleColor="#762929" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary50"
        android:text="Item Details"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/colorOnSecondary"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Item Name"
            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/editTextItemName"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:paddingLeft="12dp"
            android:layout_margin="6dp"
            android:textColor="@android:color/black"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Metrics"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Item Metrics"

            android:textSize="16sp"
            android:layout_weight="1"
            android:id="@+id/editTextItemMetrics"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:paddingLeft="12dp"
            android:layout_margin="6dp"
            android:textColor="@android:color/black"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary50"
        android:text="Inventory Details"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/colorOnSecondary"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Minimum"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemMinSubs"
                android:drawableTint="@color/colorOnSecondary"
                android:background="@drawable/substract"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/invi"
                android:inputType="number"
                android:text="10"
                android:id="@+id/itemMinimumTV"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemMinAdd"
                android:background="@drawable/add"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item In Stock"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemInStockSubs"
                android:drawableTint="@color/colorOnSecondary"
                android:background="@drawable/substract"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/invi"
                android:inputType="number"
                android:text="0"
                android:id="@+id/itemInStockTV"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemInStockAdd"
                android:background="@drawable/add"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item In Store"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemInStoreSubs"
                android:drawableTint="@color/colorOnSecondary"
                android:background="@drawable/substract"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/invi"
                android:inputType="number"
                android:text="0"
                android:id="@+id/itemInStoreTV"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemInStoreAdd"
                android:background="@drawable/add"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Ordered"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemOrderedSubs"
                android:drawableTint="@color/colorOnSecondary"
                android:background="@drawable/substract"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/invi"
                android:inputType="number"
                android:text="0"
                android:id="@+id/itemOrderedTV"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/itemOrderedAdd"
                android:background="@drawable/add"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Deficit"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width=".5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@android:color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/invi"
                android:inputType="number"
                android:text="12"
                android:id="@+id/itemDeficitTV"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>